@model ShoppingCartViewModel
<h2>Your Shopping Cart</h2>
<h4>Here are the awesome T'shirt on your shopping cart</h4>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>T-Shirt</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="shoppingCart">
            @foreach (  var line in Model.ShoppingCartItems)
            {
                <tr>
                    <td style="display:none"><input type="hidden" asp-for="@line.ShirtId" /></td>
                    <td>@line.Shirt.Name</td>
                    <td>@line.Shirt.Price.ToString("c")</td>
                    <td class="col-2">
                       @line.Shirt.Price
                    </td>
                    
                    <td>@((line.Qty * line.Shirt.Price).ToString("c"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>Total : </td>
                <td>@Model.ShoppingCartTotal.ToString("c")</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center">
        <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out now!</a>
    </div>